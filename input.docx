n = int(input("Nhập số lượng phần tử: "))
print(f"Nhập {n} phần tử:")

arr = []
for i in range(n):
    num = int(input(f"Nhập phần tử thứ {i+1}: "))
    arr.append(num)

total = sum(arr)
